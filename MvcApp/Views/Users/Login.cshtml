    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>

<html lang="zxx">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pilipala 登录</title>
    <meta charset="utf-8">
    <meta name="description" content="Luba">
    <meta name="keywords" content="HTML,CSS,JavaScript">
    <meta name="author" content="HiBootstrap">
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jsencrypt.min.js"></script>
    <link href="~/assets/css/Style.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        document.onreadystatechange = function () {
            $(".loading-div").hide();
            if (document.readyState == "complete") {
                var reg = /Key/;
                if (sessionStorage.getItem("Pub") == null || document.cookie.match(reg) == null) {
                    $.ajax({
                        url: "/Users/setRsa",
                        type: "post",
                        data: {
                        },
                        success: function (data) {
                            sessionStorage.setItem('Pub', data);
                            //调试用
                            //console.log(data);
                        }
                    });
                }
            }
            if (document.readyState != "complete") {
                var list = ['url(../public/static/uploads/login$regist/背景2.jpg)', 'url(../public/static/uploads/login$regist/背景3.jpg)'];
                var back = list[Math.round(Math.random())];
                //$("body").removeAttr("style");
                $("body").css("background-background-repeat ", "no-repeat");
                $("body").css("background-position", "center center");
                $("body").css("background-image", back);
                $("body").css("background-size", "cover");
                //$("body").css("background-attachment", "fixed");
            }
        }

        document.onmousemove = function (e) {
            var mouX = event.clientX;
            var mouY = event.clientY;
            var winHight = window.innerHeight;
            var winWidth = window.innerWidth;
            mouX = parseFloat(mouX);
            mouY = parseFloat(mouY);
            winHight = parseFloat(winHight);
            winWidth = parseFloat(winWidth);
            var x = Math.round((mouX / winWidth) * 10000) / 100.0 + "%";
            var y = Math.round((mouY / winHight) * 10000) / 100.0 + "%";
            document.getElementById("theBody").style.backgroundPositionX = x;
            document.getElementById("theBody").style.backgroundPositionY = y;
        }

        var Interceptor = false;

        function login() {
            if ($('#username').val().length == 0) {
                FloatTip(0, '请输入用户名！');
                $('.tips').html('请输入用户名！');
            } else if ($('#password').val().length == 0) {
                FloatTip(0, '请输入密码！');
                $('.tips').html('请输入密码！');
            } else {
                //防止多次提交
                if (Interceptor == false) {
                    $(".loading-div").show();
                    Interceptor = true;
                    const encrypt = new JSEncrypt();
                    var password = $('#password').val();
                    var pubKey = sessionStorage.getItem('Pub');
                    encrypt.setPublicKey(pubKey);
                    var sendWord = encrypt.encrypt(password);
                    $.ajax({
                        url: "/users/Login",
                        type: "post",
                        data: {
                            username: $('#username').val(),
                            password: sendWord
                        },
                        success: function (data) {
                            $(".loading-div").hide();
                            if (data == "success") {
                                //alert("恭喜")
                                FloatTip(1, '登录成功！请稍候！');
                                var theLink = ""
                                if (sessionStorage.getItem('thePass') == null) {
                                    theLink = "/Animation/Index"
                                }
                                else {
                                    theLink = sessionStorage.getItem('thePass')
                                    sessionStorage.removeItem('thePass');
                                }
                                window.location.href = theLink
                            }
                            else if (data == "fail") {
                                FloatTip(0, '用户名或密码错误！');
                                $('.tips').html('用户名或密码错误！');
                            } else {
                                FloatTip(2, '出现错误！');
                                $('.tips').html('出现错误！');
                            }
                        }
                    });
                    setTimeout(function () {
                        Interceptor = false;
                    }, 1000);
                }
                else {
                    $(".loading-div").hide();
                    FloatTip(0, '请不要频繁点击！');
                    $('.tips').html('请不要频繁点击！');
                }

            }
        }

        window.addEventListener('keypress', function (e) {
            if (window.event) // IE
            {
                keynum = e.keyCode
            }
            else if (e.which) // Netscape/Firefox/Opera
            {
                keynum = e.which
            }
            if (keynum == 13) {  //等于13代表 回车键
                login();
            }
        })

        function FloatTip(type, text) {
            var random = Math.floor(Math.random() * (100000 - 10000 + 1) + 10000);
            var id = 'tip-' + random;
            var winWidth = parseFloat(window.innerWidth) / 2 - 200;
            var list = ['url(../public/static/uploads/img/警告.svg)', 'url(../public/static/uploads/img/check-active.svg)', 'url(../public/static/uploads/img/取消.svg)'];
            var icon = list[type];
            var tip = $('<div>').addClass('float-tip text-center form-control').css({ //提示内容div
                'background-image': 'linear-gradient(to right, #a5a5a5 0%, #555555 70%, #333333 100%)',
                'color': 'white',
                'height': 'auto',
                'min-height': '40px',
                'position': 'fixed',
                'top': '7%',
                'left': winWidth + 'px',
                'width': '400px',
                'z-index': '3200',
                'border': '1px solid white',
                'padding': '10px 10px 10px 50px',
                'box-shadow': '3px 3px 3px #999999',
                'display': 'none',
                'opacity': 0.2,
            }).html(text).attr('id', id);
            var leftDiv = $('<div>').css({ //图标
                'position': 'fixed',
                'width': '40px',
                'height': '30px',
                'margin-top': '-25px',
                'margin-left': '-45px',
                'border-radius': '3px',
                'color': 'black',
                'padding': '5px 0px',
                'background-image': icon,
                'background-background-repeat': 'no-repeat',
                'background-position': 'center center',
                'background-repeat': 'no-repeat',
                'opacity': '0.9'
            }).html('');
            tip.append(leftDiv);
            $('body').append(tip.show());
            document.getElementById(id).animate({
                top: '2%',
                opacity: '1'
            }, 500, 'easeOutQuart');
            setTimeout(function () {
                document.getElementById(id).style.top = '2%';
                document.getElementById(id).style.opacity = '1';
            }, 500)
            setTimeout(function () {
                document.getElementById(id).animate({
                    opacity: '0'
                }, 400, 'easeOutQuart');
                setTimeout(function () {
                    document.getElementById(id).remove();
                }, 400)
            }, 800)
        }
    </script>
    <style>
        html {
            width: 100%;
            height: 100%;
        }

        body {
            width: 100%;
            height: 100%;
        }

        input {
