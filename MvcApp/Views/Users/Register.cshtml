    <script>

        document.onmousemove = function (e) {
            var mouX = event.clientX;
            var mouY = event.clientY;
            var winHight = window.innerHeight;
            var winWidth = window.innerWidth;
            mouX = parseFloat(mouX);
            mouY = parseFloat(mouY);
            winHight = parseFloat(winHight);
            winWidth = parseFloat(winWidth);
            var x = Math.round((mouX / winWidth) * 10000) / 100.0 + "%";
            var y = Math.round((mouY / winHight) * 10000) / 100.0 + "%";
            document.getElementById("theBody").style.backgroundPositionX = x;
            document.getElementById("theBody").style.backgroundPositionY = y;
        }
    </script>
    <script>
        function register() {
            if ($('#username').val().length == 0) {
                $('.tips').html('请输入手机号或学号！');
            } else if ($('#password').val().length == 0) {
                $('.tips').html('请输入密码！');
            } else if ($('#email').val().length == 0) {
                $('.tips').html('请输入邮箱！');
            } else if ($('#reSurepassword').val() != $('#password').val()) {
                $('.tips').html('两次密码不一致！');
            } else {
                const encrypt = new JSEncrypt();
                var password = $('#password').val();
                var pubKey = sessionStorage.getItem('Pub');
                encrypt.setPublicKey(pubKey);
                var sendWord = encrypt.encrypt(password);
                $.ajax({
                    url: "/users/Register",
                    type: "post",
                    data: {
                        username: $('#username').val(),
                        password: sendWord,
                        email: $('#email').val(),
                    },
                    success: function (data) {
                        if (data == "success") {
                            $('.tips').html('');
                            alert("注册成功")
                            if (history.length > 1) {
                                window.history.go(-1);
                            }
                            else {
                                window.location.href = "..";
                            }
                        }
                        else if (data == "illegalname") {
                            $('.tips').html('用户名已被使用');
                        }
                        else if (data == "illEmail") {
                            $('.tips').html('邮箱已被使用');
                        }
                        else {
                            $('.tips').html('错误！');
                        }
                    }
                });
            }
        }
    </script>
    <script>
        function checkName() {
            if ($('#username').val().length == 0) {
                $('#icon1').attr('class', 'glyphicon glyphicon-remove');
                $('#tips1').html('请输入用户名！');
            }
            else {
                $.ajax({
                    url: "/users/IsUsernameUnique",
                    type: "get",
                    data: {
                        name: $('#username').val(),
                    },
                    success: function (data) {
                        if (data == "no") {
                            $('#icon1').attr('class', 'glyphicon glyphicon-remove');
                            $('#tips1').html('用户名已被使用！');
                        }
                        else {
                            $('#icon1').attr('class', 'glyphicon glyphicon-ok');
                            $('#tips1').html('');
                        }
                    }
                });
            }
        }

        function checkPsw() {
            if ($('#password').val().length == 0) {
                $('#icon2').attr('class', 'glyphicon glyphicon-remove');
                $('#tips2').html('请输入密码！');
            }
            else {
                var regex = /[\^%&',;=?$\\]+/;
                if ($('#password').val().match(regex) == null) {
                    $('#icon2').attr('class', 'glyphicon glyphicon-ok');
                    $('#tips2').html('');
                }
                else {
                    $('#icon2').attr('class', 'glyphicon glyphicon-remove');
                    $('#tips2').html('含有非法字符！');
                }
            }
        }

        function ReCheckPsw() {
            if ($('#reSurepassword').val().length == 0) {
                $('#icon3').attr('class', 'glyphicon glyphicon-remove');
                $('#tips3').html('请确认密码！');
            }
            else {
                if ($('#password').val() != $('#reSurepassword').val()) {
                    $('#icon3').attr('class', 'glyphicon glyphicon-remove');
                    $('#tips3').html('两次密码不一致！');
                }
                else {
                    $('#icon3').attr('class', 'glyphicon glyphicon-ok');
                    $('#tips3').html('');
                }
            }
        }

        function checkMail() {
            if ($('#email').val().length == 0) {
                $('#icon4').attr('class', 'glyphicon glyphicon-remove');
                $('#tips4').html('请输入邮箱！');
            }
            else {
                var regex = /^[a-zA-Z0-9.! #$%&'*+\/=?^_`{|}~-]+@@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)+[a-z]{2,}$/;
                if ($('#email').val().match(regex) == null) {
                    $('#icon4').attr('class', 'glyphicon glyphicon-remove');
                    $('#tips4').html('邮箱格式不正确！');
                }
                else {
                    $.ajax({
                        url: "/users/IsEmailUnique",
                        type: "get",
                        data: {
                            email: $('#email').val(),
                        },
                        success: function (data) {
                            if (data == "no") {
                                $('#icon4').attr('class', 'glyphicon glyphicon-remove');
                                $('#tips4').html('邮箱已被使用！');
                            }
                            else {
                                $('#icon4').attr('class', 'glyphicon glyphicon-ok');
                                $('#tips4').html('');
                            }
                        }
                    });
                }
            }
        }
    </script>
