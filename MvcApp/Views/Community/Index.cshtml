            }
        }


        //动态发布
        function addDynamic(data) {
            if (data == "login") {
                alert("请先登录！");
                sessionStorage.setItem('thePass', window.location.href);
                window.location.href = '/Users/Login';
            }
            else if (data == "fail") {
                alert("评论失败！");
            }
            else {
                $("#aresult").html(data);
                alert("发表成功！");
            }
        }
    </script>
