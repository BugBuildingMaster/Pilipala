                            <li data-cid="0">
                                <span> @Html.ActionLink("首页", "Index", "Animation")</span>
                            </li>
                            <li data-cid="19">
                                <span> @Html.ActionLink("番剧", "Index", "Animation")</span>
                            </li>
                            <li data-cid="30">
                                <span> @Html.ActionLink("排行榜", "Rankinglist", "RankingList")</span>
                            </li>
                            <li data-cid="36" class="on">
