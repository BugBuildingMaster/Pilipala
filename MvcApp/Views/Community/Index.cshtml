        //删除动态
        function deleteDongtai(id) {
            //var alarm = '确认删除id为' + id + '的动态？';

            var alarm = '确认删除该动态？';
            if (confirm(alarm) == true) {
                $.ajax({
                    type: "post",
                    url: "/Community/DeleteDongtai",
                    data: {
                        id: id,
                    },
                    success: function (data) {
                        if (data == 'Fail') {
                            alert('淦，报错')
                        }
                        else {
                            $("#theDongtai" + id).remove();
                        }
                    },
                })
            }
            else {
                return;
            }
        }

        //删除测评
        function deleteEva(id) {
            //var alarm = '确认删除id为' + id + '的测评？';

            var alarm = '确认删除该测评？';
