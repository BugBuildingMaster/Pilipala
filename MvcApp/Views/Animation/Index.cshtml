    <script>
        function loading() {
            $('#CategoryList').css('max-height', '0px');

            if (document.readyState == "complete") {
                var div = document.getElementById('loading');
                div.style.opacity = 1;
                hidden(document.getElementById("loading"), 1, -0.01);
                setTimeout('hide()', 400)
            }
            else {
                setTimeout('loading()', 20);
            }
        }

        function hide() {
            $(".loading-div").hide();
            $('body').css('overflow', 'scroll');
            $(".mainbody").show();
        }
        document.onreadystatechange = function () {
            document.title = "Pilipala动漫网";

            if (sessionStorage.getItem('introViewed') == 'true') {
                setTimeout('loading()', 1500);
            } else {
                setTimeout('loading()', 4500);
            }
        }

        function init() {
            $(".mainbody").hide();
            $('body').css('overflow', 'scroll');
            if (sessionStorage.getItem('introViewed') != 'true') {
                $(".loading-div").show();
                document.getElementById('opening').src = "../public/static/uploads/openinggif/logoAnimation.gif";
                //document.getElementById('opening').src = "../public/static/uploads/openinggif/logoAnimation.gif";
                sessionStorage.setItem('introViewed', 'true');
            }
            else {
                $(".loading-div").show();
                document.getElementById('opening').src = "../public/static/uploads/openinggif/logo1.gif";
            }
            //logo随机
            var list = ['../public/static/uploads/openinggif/smalllogo1.gif', '../public/static/uploads/openinggif/smalllogo2.gif'];
            document.getElementById('logoimg').addEventListener('mouseover', function () {
                var ranLogo = list[Math.round(Math.random())];
                document.getElementById('logoimg').src = ranLogo;
            });
        }

        function hidden(o, i, s) {
            t = setInterval(function () {
                i += s;
                o.style.opacity = i;
                if (i < 0) window.clearInterval(t);
            }, 1);
        };

        function moveToCenter() {
            $("html, body").animate({ scrollTop: $(".theCenter").offset().top }, 1000);
        }

        function goToAnimation(id) {
            var url = "../Animation/details?id=" + id;
            window.location.href = url;
        }

        function MenuDisplay(a) {
            setTimeout(function () {
                $('#CategoryList').addClass('active');
            }, 50);
            if (a == 0) {
                if ($('#CategoryList').css('max-height') == '580px') {
                    $('#CategoryList').css('max-height', '0px');
                }
                else {
                    $('#CategoryList').css('max-height', '580px');
                }
            }
            else if (a == 1)
                $('#CategoryList').css('max-height', '580px');
            else if (a == 2)
                $('#CategoryList').css('max-height', '0px');
        }
    </script>
