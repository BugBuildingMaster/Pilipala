        <script>
            const app = new Vue({
                el: "#app",
                data: {
                    //是否显示分类
                    categoryShow: false,
                    //日漫信息
                    aJapanList: [],
                    //国漫信息
                    aChinaList: [],
                    //分类信息
                    aCategory: [],
                    aCategoryList: [],

                    //分页
                    //一共多少条数据
                    pageAll: '',
                    //当前页面
                    pageNum: '',
                    //每页数据数量
                    pageSize: 12,
                    //当前页
                    currentPage: 0,

                    //点击后获取到的动漫名
                    cName: '',
                    pageInfo: []
                },
                created() {
                    this.getaJapanList(),
                        this.getaChinaList(),
                        this.getaCategory()
                },
                methods: {
                    //获取日漫信息 向控制器发一个get请求 并将请求到的数据存入aJapanList中
                    async getaJapanList() {
                        const { data: res } = await axios.get('/Animation/GetJapanAniamtions', {
                            params: {
                                pages: 16
                            }
                        })
                        this.aJapanList = res
                        //console.log('ssss')
                        console.log(this.aJapanList)
                    },
                    //获取国漫信息 向控制器发一个get请求 并将请求到的数据存入aChinaList中
                    async getaChinaList() {
                        const { data: res } = await axios.get('/Animation/GetChinaAniamtions', {
                            params: {
                                pages: 16
                            }
                        })
                        this.aChinaList = res
                        //console.log(this.aChinaList)
                    },
                    //获取分类的信息
                    async getaCategory() {
                        const { data: res } = await axios.get('/Animation/GetCategories')
                        this.aCategory = res
                        //console.log(this.aCategory)
                    },
                    //分类点击事件
                    btnCategory(name) {
                        this.getCategoryListNum(name)
                        this.getaCategoryList(name)
                        this.categoryShow = true
                    },
                    //根据获取该分类下的动漫
                    async getaCategoryList(name) {
                        const { data: res2 } = await axios.get('/Animation/getaByCategory', {
                            params: {
                                name: name,
                                num: this.pageSize,
                                currentPage: this.currentPage
                            }
                        })
                        this.cName = name
                        this.aCategoryList = res2
                        //console.log(res2)
                    },
                    //获取该动漫分类下的动漫数量
                    async getCategoryListNum(name) {
                        const { data: res } = await axios.get('/Animation/getaCategoryNUm', {
                            params: {
                                name: name
                            }
                        })
                        this.pageAll = res
                        //向下取整
                        this.pageNum = Math.ceil(this.pageAll / this.pageSize)
                        //console.log(this.pageNum)
                    },
                    btnPageClick(a) {
                        this.currentPage = a - 1
                        this.getaCategoryList(this.cName)
                    },
                    //点击图片根据id跳转至详情页面
                    async aDetailsUrl(id) {
                        window.location.href = '/Animation/details?id=' + id
                    },
                    //返回星星数量
                    starArray(num) {
                        var ar = []
                        var intNum = parseInt(num) / 2
                        while (intNum > 0) {
                            ar.push(1)
                            intNum = intNum - 1
                        }
                        return ar
                    },
                },
                computed: {
                    //分页页数
                    pageIndexs: function () {
                        var left = 1;
                        var right = this.pageNum;
                        var ar = [];
                        while (left <= right) {
                            ar.push(left)
                            left++
                        }
                        return ar
                    },

                }
            })
